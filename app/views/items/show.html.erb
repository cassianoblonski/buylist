<h1><%= t('listing', name: t('item.title', count: 1)) %></h1>

<table class="table table-striped table-hover">

 <tr>
   <th scope="row"><%= t('item.name') %>:</th>
   <td><%= @item.name %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('item.quantity') %>:</th>
   <td><%= @item.quantity %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('item.buy_list') %>:</th>
   <td><%= @item.buy_list %></td>
 </tr>

</table>

<%= link_to t('edit'), edit_buy_list_item_path(@item.buy_list.id, @item.id), class: 'btn btn-primary', role: :button %>
