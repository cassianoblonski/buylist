<h1><%= t('listing', name: t('buy_list.title', count: 2)) %></h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
              <th scope="col"><%= t('buy_list.name') %></th>
              <th scope="col"><%= t('buy_list.finished') %></th>
            <th scope="col"><%= t('actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @buy_lists.each do |buy_list| %>
      <tr>
                  <td><%= buy_list.name %></td>
                  <td><%= buy_list.finished ? 'Yes' : 'No' %></td>
                <td>
          <div class="btn-group btn-group-sm" role="group">
            <%= link_to t('show'), buy_list, class: 'btn btn-info', role: :button %>
            <%= link_to t('edit'), edit_buy_list_path(buy_list), class: 'btn btn-success', role: :button %>
            <%= link_to t('destroy'), buy_list, method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new', name: t('buy_list.title', count: 1)), new_buy_list_path, class: 'btn btn-primary', role: :button %>
